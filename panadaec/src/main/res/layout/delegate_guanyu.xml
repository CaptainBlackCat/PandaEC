<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_110PX"
        android:background="@color/red_f7443e">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_40PX"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/DIMEN_20PX"
            android:paddingRight="@dimen/DIMEN_20PX"
            android:src="@drawable/white_back" />
    </RelativeLayout>
<TextView
    android:id="@+id/guanyu_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="熊猫公社"
    android:layout_marginTop="@dimen/DIMEN_20PX"
    android:layout_marginBottom="@dimen/DIMEN_20PX"
    android:layout_centerInParent="true"
    android:textSize="@dimen/DIMEN_30PX"/>
    <TextView
        android:id="@+id/guanyu_verstioninfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本信息3.1.25"

        android:textColor="@color/grey_96"
        android:layout_below="@id/guanyu_title"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zitian"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/guanyu_title"
        />
    <TextView
        android:id="@+id/guanyu_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~ 你好啊, aaaaaa"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/DIMEN_50PX"/>
</RelativeLayout>