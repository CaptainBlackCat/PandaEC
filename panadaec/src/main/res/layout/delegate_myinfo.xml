<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_110PX"
        android:background="@color/red_f7443e">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人资料"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_40PX"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/DIMEN_20PX"
            android:paddingRight="@dimen/DIMEN_20PX"
            android:src="@drawable/white_back" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_f5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line" />

    <LinearLayout
        android:id="@+id/mysetting_ziliao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_80PX"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/click"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:drawablePadding="@dimen/DIMEN_15PX"
            android:gravity="center"
            android:text="个人头像"
            android:textColor="@color/black_333"
            android:textSize="@dimen/DIMEN_30PX" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/myinfo_headview"
            android:layout_width="@dimen/DIMEN_80PX"
            android:layout_height="@dimen/DIMEN_80PX"
            android:padding="@dimen/DIMEN_10PX"
            android:src="@drawable/my_head_icon"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:drawablePadding="@dimen/DIMEN_15PX"
            android:src="@drawable/my_back"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line" />

    <LinearLayout
        android:id="@+id/mysetting_connectwx"
        android:clickable="true"
        android:background="@drawable/click"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_80PX"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:drawablePadding="@dimen/DIMEN_15PX"
            android:gravity="center"
            android:text="昵称"
            android:textColor="@color/black_333"
            android:textSize="@dimen/DIMEN_30PX" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/myinfo_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/grey_96"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:drawablePadding="@dimen/DIMEN_15PX"
            android:drawableRight="@drawable/my_back"
            android:gravity="center"
            android:text="未填写"
            android:textSize="@dimen/DIMEN_30PX" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line" />

    <LinearLayout
        android:id="@+id/myinfo_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_80PX"
        android:clickable="true"
        android:background="@drawable/click"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:drawablePadding="@dimen/DIMEN_15PX"
            android:gravity="center"
            android:text="生日"
            android:textColor="@color/black_333"
            android:textSize="@dimen/DIMEN_30PX" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/myinfo_tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:drawablePadding="@dimen/DIMEN_15PX"
            android:drawableRight="@drawable/my_back"
            android:gravity="center"
            android:textColor="@color/grey_96"
            android:text="未填写"
            android:textSize="@dimen/DIMEN_30PX" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line" />

    <LinearLayout
        android:id="@+id/mysetting_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_80PX"
        android:clickable="true"
        android:background="@drawable/click"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:drawablePadding="@dimen/DIMEN_15PX"
            android:gravity="center"
            android:text="性别"
            android:textColor="@color/black_333"
            android:textSize="@dimen/DIMEN_30PX" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/myinfo_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:drawablePadding="@dimen/DIMEN_15PX"
            android:drawableRight="@drawable/my_back"
            android:textColor="@color/grey_96"
            android:gravity="center"
            android:text="未填写"
            android:textSize="@dimen/DIMEN_30PX" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line" />

    <LinearLayout
        android:id="@+id/myinfo_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_80PX"
        android:clickable="true"
        android:background="@drawable/click"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:drawablePadding="@dimen/DIMEN_15PX"
            android:gravity="center"
            android:text="地区"
            android:textColor="@color/black_333"
            android:textSize="@dimen/DIMEN_30PX" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/myinfo_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:drawablePadding="@dimen/DIMEN_15PX"
            android:drawableRight="@drawable/my_back"
            android:gravity="center"
            android:textColor="@color/grey_96"
            android:text="未填写"
            android:textSize="@dimen/DIMEN_30PX" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_f5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line" />

    <LinearLayout
        android:id="@+id/myinfo_editaddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_80PX"
        android:clickable="true"
        android:background="@drawable/click"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:drawablePadding="@dimen/DIMEN_15PX"
            android:gravity="center"
            android:text="收货地址"
            android:textColor="@color/black_333"
            android:textSize="@dimen/DIMEN_30PX" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/myinfo_tv_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:drawablePadding="@dimen/DIMEN_15PX"
            android:drawableRight="@drawable/my_back"
            android:gravity="center"
            android:textColor="@color/grey_96"
            android:text="新建/修改"
            android:textSize="@dimen/DIMEN_30PX" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"/>
    <TextView
        android:id="@+id/myinfo_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textColor="@color/white"
        android:background="@drawable/click_red"
        android:layout_marginTop="@dimen/DIMEN_100PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:gravity="center"
        android:padding="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"/>
</LinearLayout>