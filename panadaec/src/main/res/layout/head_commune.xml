<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grey_f5"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_180PX"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/head_commune_thumb"
            android:layout_width="@dimen/DIMEN_150PX"
            android:layout_height="@dimen/DIMEN_150PX"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:src="@drawable/base_rect"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/DIMEN_50PX"
            android:layout_marginBottom="@dimen/DIMEN_50PX"
            android:layout_weight="1">
            <TextView
                android:id="@+id/head_commune_count"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="@dimen/DIMEN_40PX"
                android:textSize="@dimen/DIMEN_25PX"
                android:textColor="@color/grey_666"
                android:text="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/DIMEN_25PX"
                android:textColor="@color/grey_666"
                android:gravity="center"
                android:text="全部商品"/>
        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/DIMEN_40PX"
            android:layout_marginBottom="@dimen/DIMEN_40PX"
            android:background="@color/list_line"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/DIMEN_50PX"
            android:layout_marginBottom="@dimen/DIMEN_50PX"
            android:layout_weight="1">
            <ImageView
                android:layout_width="@dimen/DIMEN_40PX"
                android:layout_height="@dimen/DIMEN_40PX"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/commune_erma"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/DIMEN_25PX"
                android:textColor="@color/grey_666"
                android:gravity="center"
                android:text="二维码"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_60PX"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:layout_marginBottom="@dimen/DIMEN_15PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:hint="请输入关键字进行搜索"
        android:textSize="@dimen/DIMEN_25PX"
        android:paddingLeft="@dimen/DIMEN_20PX"
        android:drawableLeft="@drawable/search"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:drawablePadding="@dimen/DIMEN_10PX"
        android:lines="1"
        android:ems="10"
        android:background="@drawable/search_bg_white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_15PX"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@color/list_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/DIMEN_25PX"
            android:textColor="@color/grey_666"
            android:text="小店推荐"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@color/list_line"/>
    </LinearLayout>
</LinearLayout>