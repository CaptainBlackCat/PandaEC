<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_230PX"
    android:background="@color/white"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/item_myfoot_carimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/CustomCheckBoxTheme"
            android:gravity="center"
            android:layout_marginLeft="@dimen/DIMEN_25PX"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_myfoot_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_20PX"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_marginTop="@dimen/DIMEN_20PX"
                android:text="0000-00-00 00:00:00"
                android:textColor="@color/grey_666"
                android:textSize="@dimen/DIMEN_25PX" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_myfoot_merchname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_20PX"
                android:layout_marginRight="@dimen/DIMEN_20PX"
                android:layout_marginTop="@dimen/DIMEN_20PX"
                android:text="熊猫全球购"
                android:textColor="@color/grey_3d"
                android:textSize="@dimen/DIMEN_25PX" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:background="@color/list_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_myfoot_thumb"
                android:layout_width="@dimen/DIMEN_120PX"
                android:layout_height="@dimen/DIMEN_120PX"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_marginTop="@dimen/DIMEN_30PX"
                android:scaleType="centerCrop"
                android:src="@drawable/base_rect" />

            <TextView
                android:id="@+id/item_myfoot_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000000000000000000000000000000000000000000000000000000"
                android:layout_toRightOf="@+id/item_myfoot_thumb"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_marginTop="@dimen/DIMEN_15PX"
                android:textSize="@dimen/DIMEN_25PX"/>
            <TextView
                android:id="@+id/item_myfoot_realprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_f7443e"
                android:textSize="@dimen/DIMEN_30PX"
                android:layout_toRightOf="@+id/item_myfoot_thumb"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:textStyle="bold"
                android:paddingBottom="@dimen/DIMEN_10PX"
                android:text="￥000.00"/>
            <TextView
                android:id="@+id/item_myfoot_beforeprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_666"
                android:text="￥000.00"
                android:textSize="@dimen/DIMEN_25PX"
                android:layout_toRightOf="@+id/item_myfoot_realprice"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/DIMEN_10PX"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>