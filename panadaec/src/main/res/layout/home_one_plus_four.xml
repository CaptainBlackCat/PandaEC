<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_350PX"
    android:id="@+id/one_plus_four_layout"
    android:weightSum="5">
    <ImageView
        android:id="@+id/one_plus_four_img1"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/one_plus_four_img2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/one_plus_three_img3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/one_plus_four_img3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/one_plus_four_img4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>