<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.5dp"
    android:clickable="true"
    android:background="@drawable/click"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_home_maxtrix_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="天天拼团"
        android:textColor="@color/grey_3d"
        android:textSize="@dimen/DIMEN_35PX" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/item_home_maxtrix_thumb"
        android:layout_width="@dimen/DIMEN_200PX"
        android:layout_height="@dimen/DIMEN_200PX"
        android:layout_marginTop="@dimen/DIMEN_40PX"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

</LinearLayout>