    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/list_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_f5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/list_line" />

    <LinearLayout
        android:id="@+id/mysetting_guanyu"
        android:layout_width="match_parent"
