<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_110PX"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="免费注册"
            android:textColor="@color/grey_3d"
            android:textSize="@dimen/DIMEN_40PX"></TextView>

        <ImageView
            android:id="@+id/regist_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/DIMEN_20PX"
            android:paddingRight="@dimen/DIMEN_20PX"
            android:src="@drawable/shop_back" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/login_headview"
        android:layout_width="@dimen/DIMEN_200PX"
        android:layout_height="@dimen/DIMEN_200PX"
        android:src="@drawable/login_head"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/DIMEN_100PX"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:textColorHint="@color/grey_96"
        android:layout_marginTop="@dimen/DIMEN_80PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:textSize="@dimen/DIMEN_25PX"
        android:textCursorDrawable="@drawable/editcursor"
        android:background="@null"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:background="#F768A3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入5位短信验证码"
            android:textColorHint="@color/grey_96"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:textSize="@dimen/DIMEN_25PX"
            android:textCursorDrawable="@drawable/editcursor"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:layout_gravity="bottom"
            android:textSize="@dimen/DIMEN_25PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:textColor="@color/grey_96"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:background="#F768A3"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:textSize="@dimen/DIMEN_25PX"
        android:textColorHint="@color/grey_96"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:textCursorDrawable="@drawable/editcursor"
        android:background="@null"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:background="#F768A3"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请重复输入密码"
        android:textColorHint="@color/grey_96"
        android:textSize="@dimen/DIMEN_25PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:textCursorDrawable="@drawable/editcursor"
        android:background="@null"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:background="#F768A3"/>

    <TextView
        android:id="@+id/login_loginbtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:background="@drawable/bg_login"
        android:gravity="center"
        android:paddingBottom="@dimen/DIMEN_10PX"
        android:text="立即注册"
        android:layout_marginTop="@dimen/DIMEN_60PX"
        android:textColor="@color/white"
        android:textSize="@dimen/DIMEN_40PX" />
</LinearLayout>